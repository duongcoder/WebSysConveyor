<div class="container px-4 text-center">
  <div class="row gx-5">
    <div class="col">
        <div class="p-3">Điều khiển</div>
        <div class="button_system">
            <button type="button" class="btn btn-success" onclick="onLamp()">Start</button>
            <button type="button" class="btn btn-danger" onclick="offLamp()">Stop</button>
            <button type="button" class="btn btn-warning">Warning</button>
        </div>
    </div>

    <div class="col">
        <div class="p-3">Tín hiệu</div>
        <div class="component_sig">
            <img src="/img/lamp_off.png" id="sig_lamp-off" class="rounded mx-auto d-block" alt="">
        </div>
    </div>
  </div>

  <div class="info_product mt-4">
    <div class="badge bg-primary text-wrap text-uppercase fs-2" style="width: 100%;">
      Thông tin sản phẩm
    </div>

    <div class="table_product">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Sản phẩm</th>
            <th scope="col">Số lượng</th>
            <th scope="col">Tổng số lượng</th>
          </tr>
        </thead>

        <tbody>
          <tr class="table-danger">
            <th scope="row">1</th>
            <td>Màu đỏ</td>
            <td>5</td>
            <td>10</td>
          </tr>

          <tr class="table-success">
            <th scope="row">2</th>
            <td>Màu xanh</td>
            <td>4</td>
            <td>10</td>
          </tr>

          <tr class="table-warning">
            <th scope="row">3</th>
            <td>Màu vàng</td>
            <td>3</td>
            <td>10</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>